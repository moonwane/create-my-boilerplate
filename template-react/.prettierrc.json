{
  "$schema": "https://json.schemastore.org/prettierrc",
  "printWidth": 100,
  "singleQuote": true,
  "overrides": [
    {
      "files": ["*.{yaml,yml}"],
      "options": {
        "singleQuote": false
      }
    }
  ],
  "plugins": ["@ianvs/prettier-plugin-sort-imports"],
  "importOrder": [
    "<TYPES>^(node:)",
    "<TYPES>",
    "<TYPES>^[.]",
    "<BUILTIN_MODULES>",
    "^react$",
    "^react-dom$",
    "<THIRD_PARTY_MODULES>",
    "^@",
    "^[.]"
  ],
  "importOrderTypeScriptVersion": "5.0.0"
}
